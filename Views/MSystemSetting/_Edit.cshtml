@model MSystemSettingViewModel
<div class="modal micromodal-slide" id="modal-system-setting-edit" aria-hidden="true">
    <div class="modal__overlay" tabindex="-1">
        <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-system-setting-title">
            <header class="modal__header">
                <h3 class="fw-bold">修正</h3>
                <button class="btn btn-custom btn-lg" aria-label="Close modal" data-micromodal-close><i class="fas fa-times"></i></button>
            </header>
            @if (!String.IsNullOrEmpty((@ViewData["ErrorMessageEdit"] ?? "").ToString()))
            {
                <div class="alert alert-danger fadeIn mt-3 py-2" role="alert">
                    <span class="text-danger-custom">@ViewData["ErrorMessageEdit"]</span>
                </div>
            }
            <form method="post" asp-controller="MSystemSetting" enctype="multipart/form-data" autocomplete="on"
                  data-ajax="true" data-ajax-update="formDetails" class="mt-3">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.PageNumber)
                @Html.HiddenFor(model => model.SearchKeyWord)
                <div class="form-group my-3">
                    <label class="">@Html.DisplayNameFor(model => model.SystemSettingEditModel.SystemSettingId)</label>
                    <input asp-for="SystemSettingEditModel.SystemSettingId" class="form-control form-control-lg" id="SystemSettingId" type="text" readonly />
                </div>
                <div class="form-group my-3">
                    <label class="">@Html.DisplayNameFor(model => model.SystemSettingEditModel.SystemSettingOutline)</label>
                    <input asp-for="SystemSettingEditModel.SystemSettingOutline" class="form-control form-control-lg" id="SystemSettingOutline" type="text" readonly />
                </div>
                <div class="form-group my-3">
                    <label class="">@Html.DisplayNameFor(model => model.SystemSettingEditModel.SystemSettingDetail)</label>
                    <input asp-for="SystemSettingEditModel.SystemSettingDetail" class="form-control form-control-lg" id="SystemSettingDetail" type="text" readonly />
                </div>
                <div class="form-group my-3">
                    <label class="required-mark">@Html.DisplayNameFor(model => model.SystemSettingEditModel.SystemSettingValue)</label>
                    <input asp-for="SystemSettingEditModel.SystemSettingValue" class="form-control form-control-lg" id="SystemSettingValue" type="text" />
                    <span asp-validation-for="SystemSettingEditModel.SystemSettingValue" class="text-danger-custom"></span>
                </div>
                <div class="form-group my-3">
                    <label class="">@Html.DisplayNameFor(model => model.SystemSettingEditModel.SystemSettingStringValue)</label>
                    <input asp-for="SystemSettingEditModel.SystemSettingStringValue" class="form-control form-control-lg" id="SystemSettingStringValue" type="text" />
                    <span asp-validation-for="SystemSettingEditModel.SystemSettingStringValue" class="text-danger-custom"></span>
                </div>
                <footer class="modal__footer my-5 text-right">
                    <button class="btn btn-custom btn-lg" type="submit" id="btnSave" name="isUpdate" value="true">
                        <span>
                            <i class="fas fa-check fa-fw"></i> 更新
                        </span>
                    </button>
                </footer>
            </form>
        </div>
    </div>
</div>